@model MVCFilmLists.Models.ViewModels.ListDetailsData

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MovieList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieList.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieList.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieList.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieList.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieList.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieList.CreationDate)
        </dd>
    </dl>
    <div>
        <h4>Filmy w liście</h4>
        @{
            if (Model.MovieList.Movies != null && Model.MovieList.Movies.Count > 0)
            {
                var header = Model.MovieList.Movies.FirstOrDefault();
                <table class="table">
                    <thead>




                        <tr>
                            <td>
                                @Html.DisplayNameFor(modelItem => header.Title)
                            </td>
                            <td>
                                Director
                            </td>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.MovieList.Movies)
                        {

                            <tr>
                                <td>
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                                </td>
                                <td>
                                    <a asp-controller="Directors" asp-action="Details" asp-route-id="@item.Director.Id">@Html.DisplayFor(modelItem => item.Director.FirstAndLastName)</a>
                                    
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>
                    Brak filmów w liście!
                </div>
            }

        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MovieList.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
